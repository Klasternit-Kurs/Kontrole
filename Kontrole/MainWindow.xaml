<Window x:Class="Kontrole.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kontrole"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<DockPanel>
		<StackPanel DockPanel.Dock="Top">
			<ComboBox Name="cmbbox" FontSize="24" IsEditable="True" SelectionChanged="Promena" />
			<Label Name="lbl" FontSize="24"/>
		</StackPanel>
		<ScrollViewer  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
			<StackPanel Width="1200">
				<Button Content="1" Height="200" />
				<Button Content="2" Height="200"/>
				<Button Content="3" Height="200"/>
				<Button Content="4" Height="200"/>
				<Button Content="5" Height="200"/>
				<Button Content="6" Height="200"/>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>
</Window>
